{
    "name": "hive-ext",
    "version": "1.3.4",
    "description": "",
    "main": "gulpfile.js",
    "scripts": {
        "build": "cross-env NODE_ENV=production webpack",
        "build-dev": "cross-env NODE_ENV=development webpack",
        "dev": "cross-env NODE_ENV=development webpack --watch",
        "lint": "eslint .",
        "lint-fix": "eslint . --fix",
        "build-pkg": "npm run build && cd dist && zip -r ../dist.zip ./ && cd .. && zip -r hive.zip ./ -x '*.git*' -x '*.zip' -x 'dist/*' -x 'node_modules/*' -x 'build/*' -x '.vscode/*' && rm -Rf build/ dist/"
    },
    "author": "Danny Aziz",
    "license": "MIT",
    "devDependencies": {
        "@babel/core": "7.3.4",
        "@babel/plugin-proposal-class-properties": "7.3.4",
        "@babel/plugin-proposal-object-rest-spread": "7.3.4",
        "@babel/plugin-transform-runtime": "7.3.4",
        "@babel/preset-env": "7.3.4",
        "@babel/register": "7.0.0",
        "babel-eslint": "^10.0.1",
        "babel-loader": "8.0.5",
        "chrome-webstore-upload": "^0.2.2",
        "copy-webpack-plugin": "5.0.1",
        "cross-env": "5.2.0",
        "css-loader": "2.1.1",
        "eslint": "5.15.2",
        "eslint-plugin-import": "2.16.0",
        "eslint-plugin-node": "8.0.1",
        "eslint-plugin-promise": "4.0.1",
        "eslint-plugin-react": "^7.17.0",
        "html-webpack-plugin": "3.2.0",
        "husky": "1.3.1",
        "lint-staged": "8.1.5",
        "node-sass": "^4.13.1",
        "prettier": "1.16.4",
        "sass-loader": "7.1.0",
        "style-loader": "0.23.1",
        "webpack": "4.29.6",
        "webpack-chrome-extension-reloader": "1.2.0",
        "webpack-cli": "3.3.0"
    },
    "dependencies": {
        "@babel/plugin-transform-react-jsx": "^7.7.4",
        "@babel/runtime": "7.3.4",
        "@sentry/browser": "^5.11.1",
        "amplitude-js": "^5.7.0",
        "escape-html": "1.0.3",
        "hiveone-js": "^1.1.0",
        "loggly-jslogger": "^2.2.2",
        "moment": "2.24.0",
        "preact": "^10.1.1"
    },
    "lint-staged": {
        "*.js": [
            "eslint --fix",
            "prettier --write --config ./package.json --config-precedence file-override",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "standard": {
        "globals": [
            "chrome"
        ]
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ],
        "plugins": [
            "@babel/transform-runtime",
            "@babel/plugin-proposal-object-rest-spread",
            "@babel/plugin-proposal-class-properties",
            [
                "@babel/plugin-transform-react-jsx",
                {
                    "pragma": "h",
                    "pragmaFrag": "Fragment"
                }
            ]
        ]
    },
    "eslintIgnore": [
        "node_modules/",
        "build/",
        "dist/",
        ".vscode/"
    ],
    "prettier": {
        "printWidth": 120,
        "singleQuote": true,
        "useTabs": false,
        "semi": true,
        "tabWidth": 4,
        "trailingComma": "all"
    }
}
